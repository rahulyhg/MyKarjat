<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register_business"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="harshad.mykarjat.registerBusiness">

    <com.google.android.gms.ads.AdView
        android:visibility="gone"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/adunitidtest">
    </com.google.android.gms.ads.AdView>

    <WebView
        android:layout_margin="2dp"
        android:visibility="visible"
        android:layout_weight="2"
        android:id="@+id/wvregisterbusiness"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <LinearLayout
        android:visibility="visible"
        android:layout_weight="1"
        android:background="@drawable/cardborder"
        android:id="@+id/llRBLoginSignup"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="2dp"
        android:layout_height="0dp">

        <Button
            android:layout_margin="2dp"
            android:gravity="center"
            android:text="Sign In"
            android:textSize="18dp"
            android:layout_weight="1"
            android:background="@color/fui_bgTwitter"
            android:textColor="#fff"
            android:id="@+id/btnRBLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:layout_margin="2dp"
            android:textSize="18dp"
            android:gravity="center"
            android:text="Sign Up"
            android:background="@color/fui_bgTwitter"
            android:textColor="#fff"
            android:layout_weight="1"
            android:id="@+id/btnRBSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/llRBLogin"
        android:padding="2dp"
        android:layout_weight="2"
        android:background="@drawable/cardborder"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:textColor="#000"
            android:text="Username"
            android:paddingLeft="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/etRBLUsername"
            android:hint="Username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#000"
            android:text="Password"
            android:paddingLeft="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/etRBLPassword"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnRBLLogin"
            android:text="Login"
            android:layout_margin="2dp"
            android:textColor="#fff"
            android:background="#f55"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlRBRegister"

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/svRegBusiness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingBottom="45dp"
                android:layout_marginBottom="2dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#000"
                    android:text="Username"
                    android:paddingLeft="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/etRBUsername"
                    android:hint="Username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="#000"
                    android:text="Password"
                    android:paddingLeft="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/etRBPassword"
                    android:hint="Password"
                    android:inputType="textVisiblePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="#000"
                    android:text="Type"
                    android:paddingLeft="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:id="@+id/spinnerType"
                    android:background="#ddd"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
                <TextView
                    android:textColor="#000"
                    android:text="Subtype"
                    android:paddingLeft="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:id="@+id/spinnerSubtype"
                    android:background="#ddd"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>

                <TextView
                    android:textColor="#000"
                    android:text="Shop Name/Business Name"
                    android:paddingLeft="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/etBName"
                    android:hint="Shop Name/Business Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <TextView
                    android:textColor="#000"
                    android:text="Owner Name"
                    android:paddingLeft="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/etOName"
                    android:hint="Owner Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="#000"
                    android:text="Address"
                    android:paddingLeft="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/etAddress"
                    android:hint="Address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="#000"
                    android:text="Contact"
                    android:paddingLeft="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/etContact"
                    android:text="+91"
                    android:inputType="phone"
                    android:maxLength="13"
                    android:hint="Mobile/Contact Number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="#000"
                    android:text="Keywords"
                    android:paddingLeft="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/etRBKeywords"
                    android:hint="Keywords..words that will help search your business.."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </ScrollView>
        <Button
            android:id="@+id/btnSubmit"
            android:text="Submit"
            android:layout_margin="2dp"
            android:textColor="#fff"
            android:background="#050"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <com.google.android.gms.ads.AdView
        android:visibility="gone"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/adunitidtest">
    </com.google.android.gms.ads.AdView>
</LinearLayout>
